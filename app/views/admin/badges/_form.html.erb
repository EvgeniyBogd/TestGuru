<%= form_with model: [:admin, @badge], local: true do |form| %>


<p>
  <%= form.label :title %>
  <%= form.text_field :title, id: :badge_title %>
</p>

<p>
  <%= form.label :image %>
  <%= form.text_field :image, id: :badge_image %>
</p>

<p>
  <%= form.label :discription %>
  <%= form.text_field :discription, id: :badge_discription %>
</p>

<p>
  <%= form.label :rule %>
  <%= form.select :rule, @rules, id: :badge_rule, promt:true %>
</p>

<p>
  <%= form.label :rule_value %>
  <%= form.text_field :rule_value, id: :badge_rule_value %>
</p>


<p><%= form.submit %></p>
<% end %>