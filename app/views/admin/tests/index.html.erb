<h1><%= t('.head') %></h1>

<p>
  <%= link_to t('.new'), new_admin_test_path %>
</p>  

<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th class="sort-by-title pointer" scope="col">
        <%= t('.title') %>
        <%= octicon 'arrow-up', class: 'text-success' %>
        <%= octicon 'arrow-down', class: 'text-success hide' %>
      </th>
      <th scope="col"><%= t('.level') %></th>
      <th scope="col"><%= t('.amount') %></th>
      <th scope="col" colspan="3"><%= t('.actions') %></th>
    </tr>
  </thead>
  <tbody>
    <%= render @tests %>
  </tbody>
</table>   